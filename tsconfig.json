{
  "compilerOptions": {
    "noEmitOnError": false,
    "diagnostics": true,
    "lib": ["esnext"],
    "declaration": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["coverage", "dist"]
}